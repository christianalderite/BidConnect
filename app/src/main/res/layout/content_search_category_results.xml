<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SearchCategoryResults"
    tools:showIn="@layout/activity_search_category_results">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:drawableStart="@drawable/ic_search_24dp"
            android:text="Search results for "/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:id="@+id/search_txt"
            android:text="Big Dildo Af"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#acba88"
        android:padding="8dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/results_recycler"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:listitem="@layout/bids_row" />
    </LinearLayout>
</LinearLayout>