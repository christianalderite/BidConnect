<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/divider_horizontal_dim_dark"
        app:cardElevation="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/bid_img"
                    android:scaleType="fitXY"
                    android:src="@drawable/hart"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".25"
                        android:orientation="vertical">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:id="@+id/bid_item_name"
                            android:paddingLeft="10dp"
                            android:text="Used T-Back shirt with Fe.."/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight=".75"
                        android:layout_height="0dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_height="0dp"
                                    android:layout_width="match_parent"
                                    android:layout_weight=".50"
                                    android:textSize="24sp"
                                    android:id="@+id/bid_curr_bid"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="#4b460b"
                                    android:paddingLeft="10dp"
                                    android:text="₱ 349.00"/>
                                <LinearLayout
                                    android:layout_height="0dp"
                                    android:layout_width="match_parent"
                                    android:layout_weight=".30"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_weight="1"
                                        android:layout_height="match_parent"
                                        android:textSize="12sp"
                                        android:id="@+id/bid_buyout"
                                        android:textColor="#fb8c00"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:paddingLeft="10dp"
                                        android:text="₱ 349.00"/>
                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_height="0dp"
                                    android:layout_width="match_parent"
                                    android:layout_weight=".50"
                                    android:gravity="center"
                                    android:textSize="24sp"
                                    android:id="@+id/bid_highest_bid"
                                    android:textColor="#4b460b"
                                    android:paddingLeft="10dp"
                                    android:text="₱ 129.00"/>

                                <LinearLayout
                                    android:layout_height="0dp"
                                    android:layout_width="match_parent"
                                    android:layout_weight=".5"
                                    android:gravity="bottom"
                                    android:paddingBottom="3dp"
                                    android:layout_marginRight="3dp"
                                    android:orientation="horizontal">
                                    <Button
                                        android:layout_width="0dp"
                                        android:layout_height="22dp"
                                        android:layout_weight=".2"
                                        android:padding="0dp"
                                        android:textSize="10sp"
                                        android:layout_marginRight="10dp"
                                        android:textAllCaps="false"
                                        android:textColor="@color/shopeeColor"
                                        android:drawableStart="@drawable/ic_remove_shopping_cart_black_24dp"
                                        android:background="@drawable/bidding_buttons"
                                        android:text="Buyout"/>
                                    <Button
                                        android:layout_width="0dp"
                                        android:layout_height="22dp"
                                        android:layout_weight=".20"
                                        android:textColor="@color/indigo"
                                        android:textSize="10sp"
                                        android:textStyle="bold"
                                        android:textAllCaps="false"
                                        android:drawableEnd="@drawable/ic_close_black_24dp"
                                        android:background="@drawable/bidding_buttons"
                                        android:text="Cancel"/>
                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#d7ccc8">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight=".25"
                    android:id="@+id/bid_status"
                    android:textColor="#7986cb"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:text="Winning"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight=".75"
                    android:gravity="right"
                    android:id="@+id/bid_time_left"
                    android:paddingRight="10dp"
                    android:text="13:00"/>
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>